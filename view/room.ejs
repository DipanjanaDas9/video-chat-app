<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ConnectVerse</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/082fc3605a.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <header class="header">
      <div class="logo">
        <div class="header__back">
          <i class="fa-solid fa-angle-left"></i>
        </div>
        <h3>ConnectVerse</h3>
      </div>
    </header>
    <main class="main">
      <section class="main__left">
        <div class="videos__group">
          <div id="video-grid"></div>
        </div>
        
        <div class="options">
          <div class="options__left">
            <button id="stopVideo" class="options__button">
              <i class="fa-solid fa-video-slash"></i>
            </button>
            <button id="muteButton" class="options__button">
              <i class="fa-solid fa-microphone-slash"></i>
            </button>
            <button id="showChat" class="options__button">
              <i class="fa-solid fa-comments"></i>
            </button>
          </div>
          
          <div class="options__right">
            <button id="inviteButton" class="options__button">
              <i class="fa-solid fa-user-plus"></i>
            </button>
          </div>
        </div>
      </section>
      
      <section class="main__right">
        <div class="main__chat_window">
          <div class="messages"></div>
        </div>
        
        
        <div class="main__message_container">
          <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here..." />
          <button id="send" class="options__button">
            <i class="fa-solid fa-paper-plane"></i>
          </button>
        </div>
      </section>
    </main>
  </body>
  <script src="script.js"></script>
</html>
